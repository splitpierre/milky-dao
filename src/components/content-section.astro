---
const { title, id } = Astro.props;
---

<section {id} class="flex flex-col items-center gap-4 space-y-8 scroll-mt-24">
  <div class="flex flex-col items-center gap-4">
    <slot name="eyebrow" />
    <h2
      class=" text-3xl font-extrabold tracking-tight text-center gradient-text upper"
    >
      {title}
    </h2>
  </div>
  <p class="max-w-xl text-2xl font-bold text-center font-syne">
    <slot name="lead" />
  </p>
  <slot />
</section>
