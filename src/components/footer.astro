---
import { Icon } from "astro-icon";

const links = [
  {
    url: "/",
    description: "Home",
    icon: "mdi:home",
  },
  {
    url: "https://github.com/splitpierre/milky-dao",
    description: "Milky DAO on GitHub",
    icon: "fa-brands:github-alt",
  },
  {
    url: "#",
    description: "Milky DAO on Discord",
    icon: "fa-brands:discord",
  },
  {
    url: "#",
    description: "Milky DAO on Twitter",
    icon: "fa-brands:twitter",
  },
];
---

<div id="footer">
  <footer class="relative flex items-center justify-center">
    <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
      {
        links.map((link) => (
          <li>
            <a
              class="flex items-center justify-center w-16 h-16 p-4 border-2 border-current rounded-full"
              href={link.url}
            >
              <span class="sr-only">{link.description}</span>
              <Icon class="h-full" name={link.icon} />
            </a>
          </li>
        ))
      }
    </ul>
  </footer>
  <div class="relative flex items-center justify-center h-32">
    Developed with ❤️ by <a
      class="m-2"
      href="https://lilgoats.io"
      target="_blank">Lil Goats</a
    > devs.
  </div>
</div>
